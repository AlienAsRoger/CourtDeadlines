<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/task_item_height"
    android:paddingTop="4dip" 
    android:paddingBottom="4dip" 
    android:paddingRight="4dip" 
    >
    <!--android:layout_height="@dimen/task_item_height"-->
    
    <View
        android:id="@+id/priorityView"
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginRight="4dip"
        />
    <!--android:background="@drawable/priority_0"-->
    <TextView
        android:id="@+id/proposalDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/priorityView"
        />

    <TextView
        android:id="@+id/courtDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/customerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proposalDateTxt"
        android:layout_toRightOf="@id/priorityView"
        />

    <TextView
        android:id="@+id/courtTypeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/proposalDateTxt"
        />

    <TextView
        android:id="@+id/notesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/priorityView"
        android:layout_below="@id/customerTxt"
        android:textSize="13sp"
        android:maxLines="3"
        android:singleLine="false"

        />

</RelativeLayout>