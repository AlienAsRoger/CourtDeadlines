<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="4dip"
    >
    <TextView
            android:id="@+id/proposalDateTxt"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th october"
            />
    <TextView
            android:id="@+id/courtDateTxt"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20th october"
            />
    <TextView
            android:id="@+id/customerTxt"
            android:layout_below="@id/proposalDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith"
            />
    <TextView
            android:id="@+id/courtTypeTxt"
            android:layout_below="@id/proposalDateTxt"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indictment"
            />
</RelativeLayout>