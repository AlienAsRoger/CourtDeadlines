<resources>

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner.DropDown">
		<item name="android:layout_margin">2dip</item>
		<item name="android:drawSelectorOnTop">true</item>
		<item name="android:background">@drawable/spinner_background</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/text_black_selector</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
		<!-- <item name="android:spinnerSelector">@drawable/spinner_selector</item> -->
		
    <style name="DateEdt" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/textfield_selector</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarTxt" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PriorityStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
<!--
    <item name="android:textColor">@android:color/black</item>
-->

    <style name="text_shadow" parent="@android:style/Widget.TextView">
        <item name="android:typeface">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="UsualText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:shadowColor">@color/priority_1_1</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    
</resources>
